# Server
PORT=8081
ENVIRONMENT=local

# GitHub — needed for PR review trigger and merged PRs source
GITHUB_TOKEN=

# Slack — use webhook OR bot token (not both)
SLACK_WEBHOOK_URL=
SLACK_BOT_TOKEN=

# Notion — needed for Notion sinks
NOTION_TOKEN=

# Firecracker sandbox (optional — omit to use DangerousHost default)
# Set FIRECRACKER_API_URL to enable Firecracker backend via Lima TCP
FIRECRACKER_API_URL=
LIMA_INSTANCE=default
FC_KERNEL_IMAGE=
FC_ROOTFS_IMAGE=
FC_VCPU=1
FC_MEMORY_MB=256

# Optional
SENTRY_DSN=
RUST_LOG=cthulu=info
